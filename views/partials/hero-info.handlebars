<!--Hero preview-->
<article class="hero">
    <h3 class="name">{{character_name}}</h3>
    <img src="{{class_icon character_class}}" class="hero-icon" alt="character class">
    <p>Class: {{capitalizeClass character_class}}</p>
    <p>Health: {{health}}</p>
    <p>Mana: {{mana}}</p>

    <div class="flex-contain">
        <div class="button-container">
            <button class="card-button trigger"></button>
            <div class="modal">
                <div class="modal-content">
                    <span class="close-button">&times;</span>
                    <h2 class="name">{{character_name}}</h2>
                    <p>Class: {{character_class}}</p>
                    <p>Health: {{health}}</p>
                    <p>Mana: {{mana}}</p>
                    <p>Strength: {{strength}}</p>
                    <p>Dexterity: {{dexterity}}</p>
                    <p>Intelligence: {{intelligence}}</p>
                    <p>Weapon: {{weapon.weapon_name}} ({{weapon.weapon_rating}})</p>
                    <p>Armor: {{armor.armor_name}} ({{armor.armor_rating}})</p>
                </div>
            </div>
        
            <button class="card-button delete-btn" char-no="{{id}}"></button>
        </div>
    </div>

</article>